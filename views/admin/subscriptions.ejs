<%- include('../partials/header') %>

<section>
  <h1>Subscription Management</h1>
</section>

<section class="grid two-col">
  <article class="card">
    <h2>Assign Plan Manually</h2>
    <form method="post" action="/admin/subscriptions/assign" class="form-card">
      <label>Customer</label>
      <select name="userId" required>
        <option value="">Select user</option>
        <% users.forEach((u) => { %>
          <option value="<%= u.id %>"><%= u.name %> - <%= u.email %></option>
        <% }) %>
      </select>

      <label>Plan</label>
      <select name="planId" required>
        <option value="">Select plan</option>
        <% plans.forEach((p) => { %>
          <option value="<%= p.id %>">
            <%= p.name %> ($<%= Number(p.price_usd).toFixed(0) %>/<%= p.billing_cycle %>, <%= p.max_jobs %> jobs)
          </option>
        <% }) %>
      </select>

      <label>Duration Days (optional)</label>
      <input type="number" name="durationDays" min="0" placeholder="0 = no expiry" />

      <label>Notes</label>
      <textarea name="notes" rows="3"></textarea>

      <button type="submit" class="btn btn-primary">Assign Subscription</button>
    </form>
  </article>

  <article class="card">
    <h2>Recent Subscription Records</h2>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Plan</th>
          <th>Status</th>
          <th>Start</th>
          <th>End</th>
        </tr>
      </thead>
      <tbody>
        <% if (!subscriptions.length) { %>
          <tr><td colspan="5">No subscriptions yet.</td></tr>
        <% } %>
        <% subscriptions.forEach((s) => { %>
          <tr>
            <td><%= s.user_name %><br /><small><%= s.user_email %></small></td>
            <td><%= s.plan_name %></td>
            <td><span class="pill"><%= s.status %></span></td>
            <td><%= s.starts_at %></td>
            <td><%= s.ends_at || 'No end date' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </article>
</section>

<%- include('../partials/footer') %>
